<style lang="scss" is:global>
  @use "../../../../packages/ui/src/abstract" as *;

  * {
    scroll-behavior: smooth;
  }

  :root {
    $container-max-size: pxToRem(1220);
    --container-max-size: #{$container-max-size};
  }

  body {
    &#{$theme-dark} {
      --p-body-bg-color: var(--color-neutral-500);
    }
  }

  .main-content {
    --p-main-bg-color: var(--color-neutral-0);
    background-color: hsl(var(--p-main-bg-color));

    #{$theme-dark} & {
      --p-main-bg-color: var(--color-neutral-500);
    }
  }

  .hero-top-container {
    @media #{$break1} {
      margin-block-start: pxToRem(24);
    }
    @media #{$break2open} {
      margin-block-start: pxToRem(40);
    }
  }
  .hero {
    padding-inline: 1rem;
    background: linear-gradient(
      0deg,
      rgba(242, 242, 248, 0) 40%,
      rgba(242, 242, 248, 0.6) 100%
    );
    border-radius: var(--border-radius-medium);

    @media #{$break1} {
      padding-block-start: pxToRem(32);

      margin-block-end: pxToRem(24);
      &-buttons {
        margin-block-start: pxToRem(32);
        transform: translateY(50%);
      }
    }
    @media #{$break2open} {
      padding-block-start: pxToRem(80);
      padding-block-end: pxToRem(96);
      &-buttons {
        margin-block-start: pxToRem(40);
      }
    }

    #{$theme-dark} & {
      background: linear-gradient(
        0deg,
        rgba(40, 42, 59, 0) 40%,
        rgba(40, 42, 59, 0.6) 100%
      );
    }
  }

  @keyframes section-enter {
    0% {
      opacity: 0;
      translate: 0 32px;
    }
    100% {
      opacity: 1;
      translate: 0 0;
    }
  }

  #design,
  #build,
  #collaborate {
    scroll-margin-top: 20rem;
    > :nth-child(2) {
      visibility: hidden;

      &.animate {
        visibility: visible;
        animation: section-enter 500ms ease;
      }
    }
  }

  #design {
    margin-block-start: 180px;
  }

  #build {
    margin-block: 512px;
  }

  #build > :nth-child(2) {
    position: relative;

    .framework {
      display: none;
    }
    @media #{$break2open} {
      &.animate {
        .framework {
          @keyframes framework-enter {
            0% {
              opacity: 0;
              scale: 1.5;
            }
            100% {
              opacity: 1;
              scale: 1;
            }
          }

          display: grid;
          place-items: center;
          position: absolute;
          pointer-events: none;

          background-color: hsl(var(--color-neutral-0));
          box-shadow: var(--shadow-small);
          border-radius: 999px;

          opacity: 0;

          --anim-duration: 400ms;

          .theme-dark & {
            background-color: hsl(var(--color-neutral-200));
          }

          img {
            inline-size: pxToRem(24);
            block-size: pxToRem(24);
            object-fit: contain;
          }

          // Angular
          &:nth-last-child(5) {
            inset-block-start: 90%;
            inset-inline-start: 65%;

            inline-size: pxToRem(52);
            block-size: pxToRem(52);

            animation: framework-enter var(--anim-duration)
              calc(var(--anim-duration) * 2) ease forwards;
          }

          // Vue
          &:nth-last-child(4) {
            inset-block-start: 35%;
            inset-inline-start: 80%;

            inline-size: pxToRem(52);
            block-size: pxToRem(52);

            animation: framework-enter var(--anim-duration)
              calc(var(--anim-duration) * 4) ease forwards;
          }

          // React
          &:nth-last-child(3) {
            inset-block-start: 80%;
            inset-inline-start: 79.25%;

            inline-size: pxToRem(62);
            block-size: pxToRem(62);

            animation: framework-enter var(--anim-duration)
              calc(var(--anim-duration) * 3) ease forwards;
          }

          // Solid
          &:nth-last-child(2) {
            inset-block-start: 90%;
            inset-inline-start: 95.5%;

            inline-size: pxToRem(62);
            block-size: pxToRem(62);

            animation: framework-enter var(--anim-duration)
              calc(var(--anim-duration) * 6) ease forwards;
          }

          // Svelte
          &:nth-last-child(1) {
            inset-block-start: 40%;
            inset-inline-start: 95%;

            inline-size: pxToRem(70);
            block-size: pxToRem(70);

            animation: framework-enter var(--anim-duration)
              calc(var(--anim-duration) * 5) ease forwards;
          }
        }
      }
    }
  }

  @keyframes info-scale {
    from {
      scale: 1.5;
      opacity: 0;
    }
    to {
      scale: 1;
      opacity: 1;
    }
  }

  #collaborate > :nth-child(2) {
    $anim-speed: 0.6;

    &.animate {
      visibility: visible;
      animation: none;

      .anim-wrapper {
        position: relative;

        > * {
          opacity: 0;
        }

        .top-rect {
          animation-name: section-enter;
          animation-duration: calc(1600ms * $anim-speed);
          animation-delay: calc(400ms * $anim-speed);
          animation-timing-function: ease-out;
          animation-fill-mode: forwards;
        }

        .bottom-rect {
          animation-name: section-enter;
          animation-duration: calc(1600ms * $anim-speed);
          animation-delay: calc(2200ms * $anim-speed);
          animation-timing-function: ease-out;
          animation-fill-mode: forwards;
        }

        .color-card {
          display: flex;
          align-items: center;

          position: absolute;
          top: -5%;
          left: 52.5%;

          background: #fff;
          box-shadow: var(--shadow-large);
          color: rgb(55, 59, 78);
          border: 1px solid #f2f2f8;
          border-radius: 6px;
          padding-inline: 4px;
          opacity: 0;

          animation-name: info-scale;
          animation-duration: calc(800ms * $anim-speed);
          animation-delay: calc(1400ms * $anim-speed);
          animation-timing-function: ease-out;
          animation-fill-mode: forwards;

          .thumb {
            background-color: #f02e65;
            width: 16px;
            height: 16px;
            border-radius: 3px;
          }

          .code {
            margin-left: 6px;
          }

          .opacity {
            position: relative;
            margin-left: 12px;

            &::before {
              display: block;
              position: absolute;
              left: -6px;
              top: 0;

              background: #f2f2f8;
              content: " ";

              width: 1px;
              height: 100%;

              .theme-dark & {
                background: hsla(229, 17%, 26%, 1);
              }
            }
          }

          .theme-dark & {
            background: hsl(240, 19%, 13%);

            border-color: hsla(229, 17%, 26%, 1);
            color: white;
          }
        }

        .git-commit {
          position: absolute;
          bottom: -5%;
          left: 5%;

          background-color: white;
