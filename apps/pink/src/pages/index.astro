<script>
  const sections = ["#design", "#build", "#collaborate"];

  function isElementInViewport(el: Element) {
    const rect = el.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <=
        (window.innerHeight || document.documentElement.clientHeight) &&
      rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
  }

  // Progressive Enhancement: Without JS, everything will animate automatically. Otherwise,
  // We only want it to animate on scroll'
  sections.forEach((id, i) => {
    document
      .querySelector(`${id} > :nth-child(2)`)
      ?.classList.remove("animate");
  });

  var activeSection = 0;

  window.addEventListener("scroll", () => {
    activeSection = sections.reduce((acc, id, index) => {
      const section = document.querySelector(id);
      if (!section) {
        return acc;
      }

      return isElementInViewport(section) ? index : acc;
    }, activeSection);

    sections.forEach((id, i) => {
      if (i === activeSection) {
        document
          .querySelector(
            `#stickyTabs .secondary-tabs-item:nth-child(${i + 1}) a`
          )
          ?.classList.add("is-disabled");

        document
          .querySelector(`${id} > :nth-child(2)`)
          ?.classList.add("animate");
      } else {
        document
          .querySelector(
            `#stickyTabs .secondary-tabs-item:nth-child(${i + 1}) a`
          )
          ?.classList.remove("is-disabled");
      }
    });
  });

  const tabButtons = document.querySelectorAll("#stickyTabs a");
  tabButtons.forEach((button, i) => {
    button.addEventListener("click", (e) => {
      e.preventDefault();
      const id = sections[i];

      const section = document.querySelector(id) as HTMLElement;
      const sectionRect = section?.getBoundingClientRect();

      if (!sectionRect) {
        return;
      }

      const isMobile = window.innerWidth < 768;
      const offset = isMobile
        ? -120
        : -sectionRect.height / 2 - (150 * window.innerHeight) / 1440;

      window.scrollTo({
        top: section.offsetTop + offset,
        behavior: "smooth",
      });
    });
  });
</script>

